<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Inviguard" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- 앱 배경색 통일 -->
        <item name="android:windowBackground">@color/black_primary</item>
        <item name="android:statusBarColor">@color/black_primary</item>
    </style>

    <style name="Theme.Inviguard" parent="Base.Theme.Inviguard" />

    <!-- SplashActivity 전용 테마 -->
    <style name="Theme.Inviguard.Splash" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/black_primary</item> <!-- 배경 통일 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>