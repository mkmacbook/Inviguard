<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 상단바 (고정) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/left"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="24dp"
            android:src="@drawable/watermark_logo_white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/user"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/user"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 스크롤 가능 영역 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="32dp">

            <!-- 미모티콘 -->
            <ImageView
                android:id="@+id/result_img1"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/result_img1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- risk_score 텍스트 -->
            <TextView
                android:id="@+id/risk_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0점"
                android:textSize="40sp"
                android:layout_marginTop="-5dp"
                android:fontFamily="@font/roboto_semibold"
                app:layout_constraintTop_toBottomOf="@id/result_img1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- 스코어 아래 텍스트 -->
            <TextView
                android:id="@+id/risk_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이건 혼자 참을 일이 아니에요"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/text_primary"
                app:layout_constraintTop_toBottomOf="@id/risk_score"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- -1, 0, 1 위험도 등급 박스 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/risk_level_box"
                android:layout_width="328dp"
                android:layout_height="96dp"
                android:layout_marginTop="30dp"
                android:paddingStart="25dp"
                android:paddingTop="20dp"
                android:paddingEnd="25dp"
                android:paddingBottom="18dp"
                android:background="@drawable/bg_rounded_surface"
                app:layout_constraintTop_toBottomOf="@id/risk_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- 명백한 괴롭힘 -->
                <TextView
                    android:id="@+id/risk_level1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🔴 명백한 괴롭힘"
                    android:textSize="18sp"
                    android:fontFamily="@font/roboto_semibold"
                    android:textColor="@color/text_primary"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/risk_level1_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="5dp"
                    android:text="·  AI 분석 점수 : "
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/text_primary"
                    android:lineHeight="20dp"
                    app:layout_constraintTop_toBottomOf="@id/risk_level1"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 괴롭힘 유형 types -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/risk_types_box"
                android:layout_width="328dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:paddingStart="25dp"
                android:paddingTop="20dp"
                android:paddingEnd="25dp"
                android:paddingBottom="18dp"
                android:background="@drawable/bg_rounded_surface"
                app:layout_constraintTop_toBottomOf="@id/risk_level_box"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- 괴롭힘 유형 -->
                <TextView
                    android:id="@+id/risk_types"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🔍 괴롭힘 유형"
                    android:textSize="18sp"
                    android:fontFamily="@font/roboto_semibold"
                    android:textColor="@color/text_primary"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <LinearLayout
                    android:id="@+id/risk_types_texts"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="5dp"
                    app:layout_constraintTop_toBottomOf="@id/risk_types"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <!-- 이음 위로 메시지 박스 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ieum_message_box"
                android:layout_width="328dp"
                android:layout_height="200dp"
                android:layout_marginTop="18dp"
                android:paddingStart="25dp"
                android:paddingTop="20dp"
                android:paddingEnd="25dp"
                android:paddingBottom="18dp"
                android:background="@drawable/bg_rounded_surface"
                app:layout_constraintTop_toBottomOf="@id/risk_types_box"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- 이음의 위로 메시지 -->
                <TextView
                    android:id="@+id/ieum_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🫂 이음의 위로 메시지"
                    android:textSize="18sp"
                    android:fontFamily="@font/roboto_semibold"
                    android:textColor="@color/text_primary"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/ieum_message_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="지금 느끼는 감정은 절대 혼자 감당할 일이 아니에요. 도움을 요청하는 건 용기 있는 행동이고, 당신이 더 안전하고 편안할 수 있도록 함께할게요. 절대 잘못한 게 아니니 꼭 도움받으세요."
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/text_primary"
                    android:lineHeight="20dp"
                    app:layout_constraintTop_toBottomOf="@id/ieum_message"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <!-- 안내 텍스트 -->
            <TextView
                android:id="@+id/text_result_notify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="더 이상 혼자 고민하지 마세요, 지금 바로 신고하세요."
                android:textSize="12sp"
                android:fontFamily="@font/roboto_light"
                android:textColor="@color/text_primary"
                android:gravity="center"
                android:lineHeight="20dp"
                app:layout_constraintTop_toBottomOf="@id/ieum_message_box"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- 신고 진행하기 버튼 -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_report"
                android:layout_width="328dp"
                android:layout_height="41dp"
                android:layout_marginTop="50dp"
                android:text="신고 진행하기"
                android:textColor="#000000"
                android:fontFamily="@font/roboto_semibold"
                android:textSize="16sp"
                android:background="@drawable/gradient_button"
                app:layout_constraintTop_toBottomOf="@id/text_result_notify"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="TouchTargetSizeCheck"/>

            <!-- 증거 추가 제출하기 버튼 -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_additional"
                android:layout_width="328dp"
                android:layout_height="41dp"
                android:layout_marginTop="12dp"
                android:text="증거 추가 제출하기"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_semibold"
                android:background="@drawable/gradient_stroke_rounded"
                app:layout_constraintTop_toBottomOf="@id/button_report"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="TouchTargetSizeCheck"/>

            <!-- 메인으로 버튼 -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_main"
                android:layout_width="328dp"
                android:layout_height="41dp"
                android:layout_marginTop="12dp"
                android:text="메인으로"
                android:textColor="@color/text_primary"
                android:fontFamily="@font/roboto_semibold"
                android:textSize="16sp"
                android:background="@drawable/gradient_stroke_rounded"
                app:layout_constraintTop_toBottomOf="@id/button_additional"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="TouchTargetSizeCheck"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>