<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingStart="16dp"
    android:gravity="start">

    <Button
        android:id="@+id/button_additional_evidence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:background="@drawable/button_black_rounded"
        android:text="증거 추가하기"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/roboto_semibold"
        android:textSize="13sp"
        android:layout_marginTop="8dp"
        android:paddingStart="11dp"
        android:paddingEnd="11dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"  />

    <Button
        android:id="@+id/button_additional_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="@drawable/button_black_rounded"
        android:text="설명 추가하기"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/roboto_semibold"
        android:textSize="13sp"
        android:layout_marginTop="8dp"
        android:paddingStart="11dp"
        android:paddingEnd="11dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" />

    <Button
        android:id="@+id/button_start_evaluation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="@drawable/button_black_rounded"
        android:text="분석 시작하기"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/roboto_semibold"
        android:textSize="13sp"
        android:layout_marginTop="8dp"
        android:paddingStart="11dp"
        android:paddingEnd="11dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" />
</LinearLayout>